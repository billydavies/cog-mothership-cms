{% block ms_file_widget %}
	{% spaceless %}
		<div data-modal="{{ url('ms.cp.file_manager.modal.index') }}" data-file-widget{% if allowed_types %} data-file-allowed-types="{{ allowed_types|join(',') }}"{% endif %}>
			{{ block('choice_widget') }}
		</div>
	{% endspaceless %}
{% endblock ms_file_widget %}

{% block slug_widget %}
	{% spaceless %}
		<div class="slug">
			<label>Yo wassup</label>
			<input type="text" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
		</div>
	{% endspaceless %}
{% endblock slug_widget %}