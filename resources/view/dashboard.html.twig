{% extends 'Message:Mothership:ControlPanel::_templates/cp' %}
{% block javascripts %}
	{{ parent() }}
	{% javascripts
		'@Message:Mothership:CMS::resources/assets/js/setup.js'

		output='/assets/js/ms_cms.js'
		filter='?jsmin'

	%}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
	<hgroup class="title">
		<h1>Products</h1>
		<div class="controls">
			<a href="{{ url('ms.cp.cms.create')}}" class="button small create page" data-live>Add a new page</a>
		</div>
	</hgroup>
	<div class="container-content">
		<table class="table-filter page">
			<colgroup>
				<col width="100">
                <col>
                <col>
                <col>
                <col>
                <col width="175">
                <col width="100">
            </colgroup>
			<thead>
				<tr>
					<th>ID</th>
					<th>Title</th>
					<th>Parent</th>
					<th>Author</th>
					<th>Pubish date</th>
					<th class="disable"></th>
					<th class="disable"></th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th>ID</th>
					<th>Title</th>
					<th>Parent</th>
					<th>Author</th>
					<th>Pubish date</th>
					<th class="a-center"><a href="#" class="clear-filters">Clear filters</a></th>
					<th>-</th>
				</tr>
			</tfoot>
			<tbody>
				{% for page in pages %}
					<tr>
						<td>{{ page.id }}</td>
						<td>{{ page.title }}</td>
						<td>Parent</td>
						<td>Author</td>
						<td>Pub date</td>
						<td>
							<a href="{{ url('ms.cp.cms.edit', {pageID:page.id}) }}" class="button small">Edit</a>
							<a href="#" class="button small">Duplicate</a>
						</td>
						<td>
							<a href="{{ url('ms.cp.cms.delete', {pageID:page.id}) }}" class="button small remove">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}